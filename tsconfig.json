{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"svgo-autocrop": ["./index.ts"]
		},
		"strict": false,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "jest"],
		"noEmit": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
